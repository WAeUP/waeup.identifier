#: kivy 1.9
BoxLayout:
    orientation: 'vertical'
    ActionBar:
        pos_hint: {'top': 1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'waeup.identifier'
                app_icon: app.icon
                with_previous: True
            ActionOverflow:
            ActionButton:
                text: 'Settings'
                icon: 'atlas://data/images/defaulttheme/overflow'
                on_release: app.open_settings()

    Label:
        markup: True
        text: '[size=40][color=eeeeee][b]waeup[/b][/color][color=3333ff]identifier[/color][/size]'
        size_hint: 1, 0.33
    BoxLayout:
        Button:
            text: 'Scan fingerprints'
        Button:
            text: 'Verify fingerprints'
        Button:
            text: 'Quit'
            on_press: app.quit_pressed(args)
